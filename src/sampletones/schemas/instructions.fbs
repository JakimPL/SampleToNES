namespace instructions;

table PulseInstruction {
	on:bool;
	pitch:int;
	volume:int;
	duty_cycle:int;
}

table TriangleInstruction {
	on:bool;
	pitch:int;
}

table NoiseInstruction {
	on:bool;
	period:int;
	volume:int;
	short:bool;
}

union Instruction { PulseInstruction, TriangleInstruction, NoiseInstruction }

